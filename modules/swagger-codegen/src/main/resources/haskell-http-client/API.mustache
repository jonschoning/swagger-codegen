toPath
  :: Show a
  => a -> BS8.ByteString
toPath x = NH.urlEncode False (BS8.pack (show x))

toBS8
  :: Show a
  => a -> BS8.ByteString
toBS8 = TE.encodeUtf8 . T.pack . show

toBS
  :: Show a
  => a -> B.ByteString
toBS = TE.encodeUtf8 . T.pack . show

